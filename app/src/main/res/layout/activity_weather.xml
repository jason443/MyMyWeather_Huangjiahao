<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/weatherActivity_tv_cityName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="广州"
            android:gravity="center"
            android:background="@drawable/background"
            android:textSize="24sp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp">
        <ImageView
            android:id="@+id/weatherActivity_iv_weatherPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sunsmile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/weatherActivity_tv_showWeather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="今日天气：晴"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/weatherActivity_tv_showTemp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="今日温度：25℃"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/weatherActivity_bt_menu"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/circle"
            android:layout_width="40sp"
            android:layout_height="40sp" />

        <ImageButton
            android:id="@+id/weatherActivity_bt_finish"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cancle"
            android:layout_width="40sp"
            android:layout_height="40sp" />
    </RelativeLayout>




</LinearLayout>
